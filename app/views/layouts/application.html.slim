doctype html
html
  head
    title
      | BlackLabor
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  body
    .app-title.navbar.navbar-expand-md.navbar-light.bg-light
      .navbar-brand BlackLabor
      ul.navbar-nav.ml-auto
        - if current_user
          - if current_user.admin?
            li.nav-item= link_to 'ユーザー一覧', admin_users_path, class: "nav-link"
          li.nav-item= link_to current_user.name, admin_user_url(current_user), class: "nav-link"
          li.nav-item= link_to 'ログアウト', logout_path, method: :delete, class: "nav-link"
        - else
          li.nav-item= link_to 'ログイン', login_path, class: 'nav-link'
          li.nav-item= link_to '新規ユーザー登録', new_admin_user_path, class: 'nav-link'
    .container
      - if flash.notice.present?
        .alert.alert-success= flash.notice
      = yield
